<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page7">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="470dp"
            android:layout_height="230dp"
            android:src="@drawable/steak2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steak"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steak"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:text="Price: Rp 1.000.000,00"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:justificationMode="inter_word"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/font_color"
        android:text="potongan daging tebal yang biasanya diambil dari bagian daging sapi yang lebih lembut, seperti sirloin, tenderloin, atau ribeye. Daging ini kemudian dimasak sesuai selera, biasanya dengan metode panggangan, pemanggangan, atau panggang. Steak sering disajikan dengan bumbu dan saus, dan menjadi hidangan yang populer di restoran dan rumah makan."/>
    <Button
        android:id="@+id/order_id_button"
        android:layout_height="wrap_content"
        android:layout_width="290dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@color/button_color"
        app:cornerRadius="0dp"
        android:layout_marginTop="15dp"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp"
        android:text="Order Now" />

    <Button
        android:id="@+id/back_id_button"
        android:layout_height="wrap_content"
        android:layout_width="290dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/button_color"
        app:cornerRadius="0dp"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp"
        android:text="Back" />

</LinearLayout>